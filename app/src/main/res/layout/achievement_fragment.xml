<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Название:"
            android:id="@+id/textView"
            android:layout_gravity="left|bottom"
            android:autoText="false"
            android:textColor="#79000000"
            android:textSize="16dp"
            android:layout_marginLeft="4dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="bottom|center_horizontal|right"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView"
            android:singleLine="true"
            android:hint="Максимум 60 символов" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Дата достижения"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/editText2"
            android:textColor="#79000000"
            android:textSize="16dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/button3"
            android:layout_gravity="bottom|right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Категория достижения"
            android:id="@+id/textView3"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:textColor="#79000000"
            android:textSize="16dp"
            android:layout_weight="0.61"
            android:layout_marginLeft="4dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Указать категорию"
            android:id="@+id/button"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/button2"
            android:layout_weight="0.37"
            android:layout_gravity="bottom|right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Документ подтверждающий достижение"
            android:id="@+id/textView4"
            android:textColor="#79000000"
            android:textSize="16dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="4dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрать..."
            android:id="@+id/button2"
            android:layout_below="@+id/button"
            android:layout_toRightOf="@+id/button3"
            android:layout_gravity="bottom|right" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.81" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отправить"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:layout_gravity="bottom|center_horizontal" />

</LinearLayout>