<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="144dp"
            android:layout_height="54dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Название достижения"
            android:id="@+id/textView"
            android:layout_gravity="left|top"
            android:autoText="false"
            android:textColor="#79000000" />

        <EditText
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView"
            android:singleLine="true"
            android:hint="Максимум 60 символов" />

        <EditText
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_gravity="right|center_vertical"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/button3" />

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Дата достижения"
            android:id="@+id/textView2"
            android:layout_gravity="left|center_vertical"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/editText2"
            android:textColor="#79000000" />

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Категория достижения"
            android:id="@+id/textView3"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:textColor="#79000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Указать категорию"
            android:id="@+id/button"
            android:layout_gravity="right|bottom"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/editText2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Документ подтверждающий достижение"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:textColor="#79000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрать..."
            android:id="@+id/button2"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="59dp" />
    </RelativeLayout>

</LinearLayout>