<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d3d6db"
        android:gravity="center"
        android:id="@+id/loginlayout"
        android:visibility="visible">

        <EditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:id="@+id/login"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="Логин"
            android:background="@drawable/edittextstyle"
            android:singleLine="true"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/edittextstyle"
            android:hint="Пароль"
            android:singleLine="true"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:layout_marginRight="51dp"
            android:weightSum="1"
            android:layout_marginLeft="51dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зарегистрироваться"
                android:id="@+id/regbutton"
                android:layout_gravity="left" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Войти"
                android:id="@+id/loginbutton"
                android:layout_gravity="right" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollreglayout"
        android:visibility="invisible">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d3d6db"
            android:weightSum="1"
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/reglayout">

            <EditText
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:id="@+id/reglogin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextstyle"
                android:hint="Логин"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <EditText
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:id="@+id/regemail"
                android:hint="E-mail"
                android:background="@drawable/edittextstyle"
                android:singleLine="true"
                android:layout_marginBottom="5dp" />

            <EditText
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:ems="10"
                android:background="@drawable/edittextstyle"
                android:id="@+id/regpass"
                android:hint="Пароль"
                android:singleLine="true"
                android:layout_marginBottom="5dp" />

            <EditText
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:background="@drawable/edittextstyle"
                android:ems="10"
                android:id="@+id/regpassconf"
                android:layout_gravity="center_horizontal"
                android:hint="Повторите пароль"
                android:singleLine="true"
                android:layout_marginBottom="5dp" />

            <ImageView
                android:layout_width="278dp"
                android:layout_height="80dp"
                android:id="@+id/regcaptcha"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:id="@+id/regtextcaptcha"
                android:background="@drawable/edittextstyle"
                android:hint="Текст на картинке сверху"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <Button
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:text="Другой текст"
                android:id="@+id/refreshcaptcha" />

            <EditText
                android:layout_width="270dp"
                android:background="@drawable/edittextstyle"
                android:layout_height="40dp"
                android:id="@+id/regfirstname"
                android:hint="Ваше настоящее имя"
                android:singleLine="true"
                android:layout_marginBottom="5dp" />

            <EditText
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:id="@+id/regsecondname"
                android:background="@drawable/edittextstyle"
                android:hint="Ваша настоящая фамилия"
                android:singleLine="true"
                android:layout_marginBottom="5dp" />

            <EditText
                android:layout_width="270dp"
                android:background="@drawable/edittextstyle"
                android:layout_height="40dp"
                android:id="@+id/regthirdname"
                android:hint="Ваше настоящее отчество"
                android:singleLine="true"
                android:layout_marginBottom="5dp" />


            <Spinner
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:id="@+id/City_reg"
                android:entryValues="@array/cityid"
                android:prompt="@string/choosecity" />

            <Spinner
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:id="@+id/University_reg" />

            <Spinner
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:id="@+id/Faculty_reg" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зарегистрироваться"
                android:id="@+id/regbuttonsend"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>